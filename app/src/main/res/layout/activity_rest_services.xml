<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".e06.rest_services.RestServicesActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub User Info"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_below="@id/title"

        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:hint="GitHub UserName"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtUsername"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/editTextLayout"
        android:layout_marginTop="85dp"
        android:text="Find"
        android:textSize="21sp"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/editTextLayout"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/name"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/enterprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/login"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/blog"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blog: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/enterprise"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/local"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/blog"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/local"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bio"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/email"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repoNum"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nº Repositorios: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/bio"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/followNum"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nº de Seguidores: "
        android:textSize="21sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/repoNum"
        />


</RelativeLayout>